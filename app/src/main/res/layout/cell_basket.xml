<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageBasketPlat"
        android:layout_width="94dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kindpng_63194" />

    <TextView
        android:id="@+id/nomBasketPlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageBasketPlat"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nom Plat" />

    <TextView
        android:id="@+id/quantiteBasketPlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:text="@string/basketTotalQuantity"
        app:layout_constraintStart_toEndOf="@+id/imageBasketPlat"
        app:layout_constraintTop_toBottomOf="@+id/nomBasketPlat"
        tools:text="Quantite" />

    <TextView
        android:id="@+id/prixBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/basketTotalQuantity"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/plusBasket"
        app:layout_constraintStart_toStartOf="@+id/moinsBasket"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="20â‚¬" />

    <ImageView
        android:id="@+id/plusBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:fillColor="#33A502"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prixBasket"
        app:srcCompat="@drawable/ic_add" />

    <ImageView
        android:id="@+id/moinsBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:fillColor="#E60404"
        app:layout_constraintEnd_toStartOf="@+id/plusBasket"
        app:layout_constraintTop_toBottomOf="@+id/prixBasket"
        app:srcCompat="@drawable/ic_baseline_remove_circle_24" />

</androidx.constraintlayout.widget.ConstraintLayout>